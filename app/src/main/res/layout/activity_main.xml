<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ru.otus.animations.Circle
        android:id="@+id/firstCircle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:circleColor="@color/pink"
        app:circleRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.otus.animations.Circle
        android:id="@+id/secondCircle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        app:circleColor="@color/violet"
        app:circleRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toStartOf="@+id/firstCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.otus.animations.Circle
        android:id="@+id/fourthRippleCircle"
        android:alpha="0.3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:circleColor="@color/pink"
        app:circleRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <ru.otus.animations.Circle
        android:id="@+id/thirdRippleCircle"
        android:alpha="0.5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:circleColor="@color/pink"
        app:circleRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <ru.otus.animations.Circle
        android:id="@+id/secondRippleCircle"
        android:alpha="0.7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:circleColor="@color/pink"
        app:circleRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <ru.otus.animations.Circle
        android:id="@+id/firstRippleCircle"
        android:alpha="1.0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:circleColor="@color/pink"
        app:circleRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

</androidx.constraintlayout.widget.ConstraintLayout>